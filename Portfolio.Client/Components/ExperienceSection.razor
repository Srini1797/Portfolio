@using Portfolio.Shared.Models

<section id="experience">
    <div class="container">
        <h2 class="section-title">Work <span class="gradient-text">Experience</span></h2>
        <div class="timeline">
            @if (Experiences != null)
            {
                foreach (var exp in Experiences)
                {
                    <div class="timeline-item animate-fade-in">
                        <div class="timeline-dot"></div>
                        <div class="glass-card">
                            <h3>@exp.Role</h3>
                            <h4 class="gradient-text">@exp.Company</h4>
                            <p class="text-secondary">@exp.StartDate - @(exp.EndDate ?? "Present")</p>
                            <p style="margin: 1rem 0;">@exp.Description</p>
                            <ul>
                                @foreach (var highlight in exp.Highlights)
                                {
                                    <li>@highlight</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

@code {
    [Parameter] public IEnumerable<Experience>? Experiences { get; set; }
}
